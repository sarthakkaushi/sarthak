<%- include ./partials/header.ejs%>
<%- include ./partials/nav.ejs%>
      <div class="is-form-page">
        <section class="is-white has-text-centered">
          <div class="container">
            <div class="columns is-centered">
              <div class="column is-three-quarters"><img class="avatar" src="img/mf-avatar.svg">
                <h1 class="title is-spaced is-size-1-desktop is-size-2-tablet is-size-3-mobile">Want to discuss a startup collaboration? I'm most definitely game.</h1>
              </div>
            </div>
          </div>
        </section>
        <section class="is-white">
          <div class="container">     
            <form id="form" accept-charset="UTF-8" action="" method="POST">
              <div class="columns is-centered">
                <div class="column is-half">
                  <div class="field">
                    <label class="label">Name</label>
                    <div class="control is-expanded">
                      <input class="input is-large" name="name" type="text" required>
                    </div>
                  </div>
                </div>
                <div class="column is-half">
                  <div class="field">
                    <label class="label">Email</label>
                    <div class="control is-expanded">
                      <input class="input is-large" name="email" type="email" required>
                    </div>
                  </div>
                </div>
              </div>
              <div class="columns is-centered">
                <div class="column is-half">
                  <div class="field">
                    <label class="label">Which project?</label>
                    <div class="control is-expanded">
                      <div class="select is-fullwidth">
                        <select class="is-large" name="project" required>
                          <option value="0" disabled selected hidden> </option>
                          <option>Basin</option>
                          <option>YL Builders</option>
                          <option>Houston</option>
                          <option>New Product</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="column is-half">
                  <div class="field">
                    <label class="label">Your interest</label>
                    <div class="control is-expanded">
                      <div class="select is-fullwidth">
                        <select class="is-large" name="role" required>
                          <option value="0" disabled selected hidden> </option>
                          <option>Collaborator</option>
                          <option>Investor</option>
                          <option>Co-founder</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="columns is-centered">
                <div class="column">
                  <div class="field">
                    <label class="label">Additional details</label>
                    <div class="control is-expanded">
                      <textarea class="textarea is-large" name="message" rows="5" required></textarea>
                    </div>
                  </div>
                  <div class="field is-hidden">
                    <label class="is-hidden"></label>
                    <div class="control is-expanded is-hidden">
                      <input class="is-hidden" name="_gotcha" type="hidden">
                    </div>
                  </div>
                </div>
              </div>
              <div class="columns is-centered">
                <div class="column is-one-third">
                  <div class="field">
                    <div class="control">
                      <button class="button is-primary is-outlined is-medium is-fullwidth is-rounded">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </section>
      </div>
      <script src="js/main-min.js"></script>
      <script src="https://usebasin.com/f/363b98eca5af/ahoy.js" async="" defer=""></script>
      <%- include ./partials/footer.ejs%>
